// EXAMPLE: WordPress block with responsive attributes
// Copy and modify this for your blocks

{
  "blockName": "wp:cover",
  "attrs": {
    "customId": "hero-section-123",
    "animation": "fadeInUp",
    "animation_delay": "0.3s",
    "animation_duration": "0.8s",
    "responsiveStyles": {
      "width": {
        "desktop": "100%",
        "tablet": "100%",
        "mobile": "100%"
      },
      "height": {
        "desktop": "600px",
        "tablet": "400px",
        "mobile": "300px"
      },
      "padding": {
        "desktop": {
          "top": "60px",
          "right": "40px",
          "bottom": "60px",
          "left": "40px"
        },
        "tablet": {
          "top": "40px",
          "right": "30px",
          "bottom": "40px",
          "left": "30px"
        },
        "mobile": {
          "top": "30px",
          "right": "20px",
          "bottom": "30px",
          "left": "20px"
        }
      },
      "font_size": {
        "desktop": "48px",
        "tablet": "36px",
        "mobile": "24px"
      },
      "textAlign": {
        "desktop": "center",
        "tablet": "center",
        "mobile": "center"
      },
      "background_color": {
        "desktop": "#1a202c",
        "tablet": "#1a202c",
        "mobile": "#1a202c"
      }
    }
  }
}

